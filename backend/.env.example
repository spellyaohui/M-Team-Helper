# M-Team Helper 配置文件示例
# 复制此文件为 .env 并修改配置

# 调试模式
DEBUG=True

# M-Team 网站地址（根据你的访问地址修改）
# 常用地址：
#   https://kp.m-team.cc
#   https://test2.m-team.cc
#   https://api.m-team.cc
MTEAM_BASE_URL=https://kp.m-team.cc

# 账号刷新间隔（秒），默认 300 秒（5分钟）
REFRESH_INTERVAL=300

# 数据库路径
DATABASE_URL=sqlite:///./data/mteam.db
